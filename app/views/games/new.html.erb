<div class="container" style="max-width: 700px;">
  <h1 class="mb-4 mt-4">New game</h1>
  <ul class="d-flex justify-content-between p-0">
    <% @letters.each do |letter| %>
      <li class="card text-bg-primary text-center justify-content-center shadow" style="width: 40px; height: 40px;">
        <%= letter %>
      </li>
    <% end %>
  </ul>
  <p class="mt-3 mb-3">What is the longest word you can find</p>
  <form action="/score" method="get">
    <div class="input-group mb-3">
      <input type="text" class="form-control" name="word" placeholder="Longest word" aria-label="Longest word" aria-describedby="button-addon2">
      <input name="letters" type="hidden" value="<%= @letters.join %>" />
      <input type="submit" class="btn btn-primary" value="Go" id="button-addon2">
    </div>
  </form>
</div>
